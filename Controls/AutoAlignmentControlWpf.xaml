<UserControl x:Class="UaaSolutionWpf.Controls.AutoAlignmentControlWpf"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="300">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Text="Auto Alignment" 
                 FontSize="16" 
                 FontWeight="Bold" 
                 Grid.Row="0"
                 Margin="0,0,0,10"/>

        <!-- Mode Selection Buttons -->
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <ListBox x:Name="ModeListBox" Height="50" SelectionChanged="ModeListBox_SelectionChanged">
                <ListBoxItem x:Name="CoarseItem" Content="Coarse" Height="25"/>
                <ListBoxItem x:Name="FineItem" Content="Fine" Height="25"/>
            </ListBox>
        </StackPanel>

        <!-- Step Sizes Display -->
        <TextBlock x:Name="StepSizesText" 
                   Grid.Row="2" 
                   Margin="0,0,0,10"
                   FontFamily="Consolas"/>

        <!-- Scan Control Buttons -->
        <Grid Grid.Row="3" Margin="0,0,0,10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="LeftScanButton"
                    Content="←Left Gripper Scan" 
                    Grid.Column="0"
                    Height="30"
                    Margin="0,0,5,0"
                    Background="#007ACC"
                    Foreground="White"
                    Click="LeftScanButton_Click"/>

            <Button x:Name="RightScanButton"
                    Content="Right Gripper Scan→" 
                    Grid.Column="1"
                    Height="30"
                    Margin="5,0,0,0"
                    Background="#28A745"
                    Foreground="White"
                    Click="RightScanButton_Click"/>
        </Grid>

        <!-- Stop Button -->
        <Button x:Name="StopButton"
                Content="STOP" 
                Grid.Row="4"
                Height="30"
                Margin="0,0,0,10"
                Background="#DC3545"
                Foreground="White"
                Click="StopButton_Click"/>

        <!-- Status Display -->
        <TextBox x:Name="StatusTextBox"
                 Grid.Row="5"
                 IsReadOnly="True"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Background="#F8F9FA"
                 BorderBrush="#DEE2E6"/>
    </Grid>
</UserControl>