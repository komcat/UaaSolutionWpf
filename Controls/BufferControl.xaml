<UserControl x:Class="UaaSolutionWpf.Controls.BufferControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UaaSolutionWpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="250">
    <Grid>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnRunBuffer" 
                    Content="Run Homing" 
                    Width="100" 
                    Height="30" 
                    Margin="0,0,10,0"
                    Click="BtnRunBuffer_Click"/>
            <Button x:Name="btnStopBuffer" 
                    Content="Stop Homing" 
                    Width="100" 
                    Height="30"
                    Click="BtnStopBuffer_Click"/>
        </StackPanel>
    </Grid>
</UserControl>