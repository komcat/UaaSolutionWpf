<UserControl x:Class="UaaSolutionWpf.Controls.GripperControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UaaSolutionWpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200" FontSize="20">
    <StackPanel>
        <TextBlock x:Name="GripperName" 
                   Text="Gripper" 
                   FontSize="16" 
                   Margin="2"/>
        <Button x:Name="CloseGripperButton" 
                Height="40" 
                Margin="2"
                Background="#007ACC"
                Foreground="White"
                Content="Close Gripper"/>

        <Button x:Name="OpenGripperButton" 
                Height="40" 
                Margin="2"
                Background="LightGray"
                Content="Open Gripper"/>
    </StackPanel>
</UserControl>