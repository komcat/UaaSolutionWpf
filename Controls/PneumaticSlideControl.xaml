<?xml version="1.0" encoding="utf-8"?>
<UserControl x:Class="UaaSolutionWpf.Controls.PneumaticSlideControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:UaaSolutionWpf.Controls"
             xmlns:viewModels="clr-namespace:UaaSolutionWpf.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400">

    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter"/>
    </UserControl.Resources>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" 
                Background="#f3f4f6" 
                CornerRadius="4" 
                Padding="10" 
                Margin="0,0,0,10">
            <TextBlock Text="Pneumatic Slides Control" 
                       FontSize="16" 
                       FontWeight="SemiBold"/>
        </Border>

        <!-- Slides List -->
        <ItemsControl Grid.Row="1" Margin="0,10">
            <ItemsControl.Items>
                <!-- UV Slide -->
                <Border Background="White" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,0,0,10">
                    <Grid DataContext="{Binding UVSlide}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding Name}" 
                                 FontWeight="SemiBold" 
                                 FontSize="14"/>

                        <StackPanel Grid.Row="1" 
                                  Orientation="Horizontal" 
                                  Margin="0,10,0,0">
                            <TextBlock Text="State: " 
                                     VerticalAlignment="Center"/>
                            <Border CornerRadius="4" 
                                    Padding="8,4" 
                                    Margin="5,0,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="Up">
                                                <Setter Property="Background" Value="#10b981"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Down">
                                                <Setter Property="Background" Value="#3b82f6"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Unknown">
                                                <Setter Property="Background" Value="#f59e0b"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding State}" 
                                         Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Dispenser Slide -->
                <Border Background="White" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,0,0,10">
                    <Grid DataContext="{Binding DispenserSlide}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding Name}" 
                                 FontWeight="SemiBold" 
                                 FontSize="14"/>

                        <StackPanel Grid.Row="1" 
                                  Orientation="Horizontal" 
                                  Margin="0,10,0,0">
                            <TextBlock Text="State: " 
                                     VerticalAlignment="Center"/>
                            <Border CornerRadius="4" 
                                    Padding="8,4" 
                                    Margin="5,0,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="Up">
                                                <Setter Property="Background" Value="#10b981"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Down">
                                                <Setter Property="Background" Value="#3b82f6"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Unknown">
                                                <Setter Property="Background" Value="#f59e0b"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding State}" 
                                         Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>

                <!-- Pick Up Tool Slide -->
                <Border Background="White" 
                        BorderBrush="#e5e7eb" 
                        BorderThickness="1" 
                        CornerRadius="4" 
                        Padding="15" 
                        Margin="0,0,0,10">
                    <Grid DataContext="{Binding PickUpToolSlide}">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Text="{Binding Name}" 
                                 FontWeight="SemiBold" 
                                 FontSize="14"/>

                        <StackPanel Grid.Row="1" 
                                  Orientation="Horizontal" 
                                  Margin="0,10,0,0">
                            <TextBlock Text="State: " 
                                     VerticalAlignment="Center"/>
                            <Border CornerRadius="4" 
                                    Padding="8,4" 
                                    Margin="5,0,0,0">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding State}" Value="Up">
                                                <Setter Property="Background" Value="#10b981"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Down">
                                                <Setter Property="Background" Value="#3b82f6"/>
                                            </DataTrigger>
                                            <DataTrigger Binding="{Binding State}" Value="Unknown">
                                                <Setter Property="Background" Value="#f59e0b"/>
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock Text="{Binding State}" 
                                         Foreground="White"/>
                            </Border>
                        </StackPanel>
                    </Grid>
                </Border>
            </ItemsControl.Items>
        </ItemsControl>
    </Grid>
</UserControl>