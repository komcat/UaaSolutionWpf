<UserControl x:Class="UaaSolutionWpf.Controls.PneumaticSlideControlItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:UaaSolutionWpf.Controls">
    <Border Background="White" 
            BorderBrush="#e5e7eb" 
            BorderThickness="1" 
            CornerRadius="4" 
            Padding="12">
        <StackPanel>
            <TextBlock Text="Pneumatic Slides" 
                       FontWeight="SemiBold" 
                       FontSize="16" 
                       Margin="0,0,0,10"/>

            <ScrollViewer MaxHeight="400" 
                          VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="SlideItemsPanel" 
                            Orientation="Vertical" 
                           >
                    <!-- Pneumatic Slide Items will be added programmatically -->
                </StackPanel>
            </ScrollViewer>
        </StackPanel>
    </Border>
</UserControl>