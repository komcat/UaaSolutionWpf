<UserControl x:Class="UaaSolutionWpf.Controls.PneumaticSlideTestControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="600">
    <Border Background="White" 
            BorderBrush="#e5e7eb" 
            BorderThickness="1" 
            CornerRadius="4" 
            Padding="16">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock Text="Pneumatic Slide Test Panel" 
                      FontWeight="SemiBold" 
                      FontSize="18" 
                      Margin="0,0,0,16"/>

            <ScrollViewer Grid.Row="1" 
                         VerticalScrollBarVisibility="Auto">
                <ItemsControl x:Name="SlideList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Margin="0,0,0,12" 
                                    Background="#f9fafb" 
                                    CornerRadius="4" 
                                    Padding="12">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>

                                    <!-- Header -->
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="Auto"/>
                                        </Grid.ColumnDefinitions>

                                        <TextBlock Text="{Binding Name}" 
                                                 FontWeight="SemiBold" 
                                                 FontSize="16"/>

                                        <Border Grid.Column="1" 
                                                CornerRadius="4" 
                                                Padding="8,4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding CurrentState}" Value="Up">
                                                            <Setter Property="Background" Value="#10b981"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding CurrentState}" Value="Down">
                                                            <Setter Property="Background" Value="#3b82f6"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding CurrentState}" Value="Unknown">
                                                            <Setter Property="Background" Value="#f59e0b"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding IsOperating}" Value="True">
                                                            <Setter Property="Background" Value="#6b7280"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                            <TextBlock Foreground="White">
                                                <TextBlock.Style>
                                                    <Style TargetType="TextBlock">
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsOperating}" Value="True">
                                                                <Setter Property="Text" Value="Operating..."/>
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding IsOperating}" Value="False">
                                                                <Setter Property="Text" Value="{Binding CurrentState}"/>
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </TextBlock.Style>
                                            </TextBlock>
                                        </Border>
                                    </Grid>

                                    <!-- Controls -->
                                    <StackPanel Grid.Row="1" 
                                              Orientation="Horizontal" 
                                              Margin="0,8,0,0">
                                        <Button Content="Activate (Down)" 
                                                Width="120" 
                                                Height="32"
                                                Margin="0,0,8,0"
                                                Command="{Binding ActivateCommand}"
                                                IsEnabled="{Binding CanOperate}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#3b82f6"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Background" Value="#e5e7eb"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>

                                        <Button Content="Deactivate (Up)" 
                                                Width="120" 
                                                Height="32"
                                                Command="{Binding DeactivateCommand}"
                                                IsEnabled="{Binding CanOperate}">
                                            <Button.Style>
                                                <Style TargetType="Button">
                                                    <Setter Property="Background" Value="#10b981"/>
                                                    <Setter Property="Foreground" Value="White"/>
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="False">
                                                            <Setter Property="Background" Value="#e5e7eb"/>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Button.Style>
                                        </Button>
                                    </StackPanel>

                                    <!-- Status Message -->
                                    <TextBlock Grid.Row="2" 
                                             Margin="0,8,0,0"
                                             Text="{Binding StatusMessage}"
                                             Foreground="{Binding StatusColor}"/>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>