<UserControl x:Class="UaaSolutionWpf.Controls.SimpleJogControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UaaSolutionWpf.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="209.25" d:DesignWidth="890">
    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="5">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Left side ListBox -->
            <Border Grid.Column="0" 
                    BorderBrush="DarkGray" 
                    BorderThickness="1" 
                    Margin="5" 
                    Padding="5"
                    Background="#F5F5F5">
                <StackPanel>
                    <TextBlock Text="Listbox" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <ListBox x:Name="DeviceListBox" Width="150" Height="120">
                        <ListBoxItem Content="Left Hexapod"/>
                        <ListBoxItem Content="Bottom Hexapod"/>
                        <ListBoxItem Content="Right Hexapod"/>
                        <ListBoxItem Content="Gantry"/>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- ListBox step jog -->
            <Border Grid.Column="1" 
                    BorderBrush="DarkGray" 
                    BorderThickness="1" 
                    Margin="5" 
                    Padding="5"
                    Background="#F5F5F5">
                <StackPanel>
                    <TextBlock Text="ListBox step jog" Margin="0,0,0,5" FontWeight="SemiBold"/>
                    <ListBox x:Name="StepSizeListBox" Width="150" Height="120">
                        <ListBoxItem Content="0.1 micron"/>
                        <ListBoxItem Content="1.0 micron"/>
                        <ListBoxItem Content="10.0 micron"/>
                        <ListBoxItem Content="100.0 micron"/>
                    </ListBox>
                </StackPanel>
            </Border>

            <!-- Control buttons grid -->
            <Border Grid.Column="2" 
                    BorderBrush="DarkGray" 
                    BorderThickness="1" 
                    Margin="5" 
                    Padding="5"
                    Background="#F5F5F5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- Top row -->
                    <Button Content="Step-" Grid.Row="0" Grid.Column="0" 
                            Width="80" Height="40" Margin="5" Background="Yellow"/>
                    <Button Content="In" Grid.Row="0" Grid.Column="1" 
                            Width="80" Height="40" Margin="5"/>
                    <Button Content="Step+" Grid.Row="0" Grid.Column="2" 
                            Width="80" Height="40" Margin="5" Background="Yellow"/>

                    <!-- Bottom row -->
                    <Button Content="Left" Grid.Row="1" Grid.Column="0" 
                            Width="80" Height="40" Margin="5"/>
                    <Button Content="Out" Grid.Row="1" Grid.Column="1" 
                            Width="80" Height="40" Margin="5"/>
                    <Button Content="Right" Grid.Row="1" Grid.Column="2" 
                            Width="80" Height="40" Margin="5"/>
                </Grid>
            </Border>

            <!-- Up/Down buttons -->
            <Border Grid.Column="3" 
                    BorderBrush="DarkGray" 
                    BorderThickness="1" 
                    Margin="5" 
                    Padding="5"
                    Background="#F5F5F5">
                <StackPanel>
                    <Button Content="Up" Height="40" Width="80" Margin="5,5,5,10"/>
                    <Button Content="Down" Height="40" Width="80" Margin="5"/>
                </StackPanel>
            </Border>

            <!-- UVW Controls -->
            <Border Grid.Column="4" 
                    BorderBrush="DarkGray" 
                    BorderThickness="1" 
                    Margin="5" 
                    Padding="5"
                    Background="#F5F5F5">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <!-- U Controls -->
                    <Button Content="U+" Grid.Row="0" Grid.Column="0" 
                            Width="40" Height="40" Margin="5" Background="LightGray"/>
                    <Button Content="U-" Grid.Row="0" Grid.Column="1" 
                            Width="40" Height="40" Margin="5" Background="LightGray"/>

                    <!-- V Controls -->
                    <Button Content="V+" Grid.Row="1" Grid.Column="0" 
                            Width="40" Height="40" Margin="5" Background="LightGray"/>
                    <Button Content="V-" Grid.Row="1" Grid.Column="1" 
                            Width="40" Height="40" Margin="5" Background="LightGray"/>

                    <!-- W Controls -->
                    <Button Content="W+" Grid.Row="2" Grid.Column="0" 
                            Width="40" Height="40" Margin="5" Background="LightGray"/>
                    <Button Content="W-" Grid.Row="2" Grid.Column="1" 
                            Width="40" Height="40" Margin="5" Background="LightGray"/>
                </Grid>
            </Border>
        </Grid>
    </Border>
</UserControl>