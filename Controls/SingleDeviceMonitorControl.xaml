<UserControl x:Class="UaaSolutionWpf.Controls.SingleDeviceMonitorControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="200">

    <Border BorderBrush="#E5E7EB" BorderThickness="1" Margin="5" CornerRadius="4">
        <StackPanel Margin="8">
            <TextBlock Text="{Binding DeviceName}" FontWeight="Medium"/>
            <TextBlock Text="{Binding CurrentPosition}" 
                      Foreground="#3B82F6"
                      FontSize="14"
                      Margin="0,5,0,0"/>
        </StackPanel>
    </Border>
</UserControl>