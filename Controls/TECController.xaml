<UserControl x:Class="UaaSolutionWpf.Controls.TECController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UaaSolutionWpf"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="300" FontSize="14">
    <Border BorderBrush="Black" BorderThickness="1" Margin="5">
        <StackPanel Background="LightYellow">
            <TextBlock Text="TEC Controller CLD10x" 
                      Margin="5"
                      FontWeight="Bold"
                      Background="LightYellow"/>

            <Button Content="Low SLED current (150mA)" 
                    Margin="5"
                    Height="30"
                    Background="White"/>

            <Button Content="High Sled Current (250mA)" 
                    Margin="5"
                    Height="30"
                    Background="White"/>

            <Button Content="OFF" 
                    Margin="5"
                    Height="30"
                    Background="White"/>

            <!-- Current and Temperature Display -->
            <Grid Margin="5,10,5,5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Current Row -->
                <TextBlock Text="Current" 
                          Grid.Row="0" 
                          Grid.Column="0" 
                          VerticalAlignment="Center"
                          Margin="0,0,5,5"/>
                <TextBox Grid.Row="0" 
                        Grid.Column="1"
                        Height="25"
                        Margin="0,0,5,5"/>
                <TextBlock Text="A" 
                          Grid.Row="0" 
                          Grid.Column="2" 
                          VerticalAlignment="Center"
                          Margin="0,0,0,5"/>

                <!-- Temperature Row -->
                <TextBlock Text="Temp °C" 
                          Grid.Row="1" 
                          Grid.Column="0" 
                          VerticalAlignment="Center"
                          Margin="0,0,5,0"/>
                <TextBox Grid.Row="1" 
                        Grid.Column="1"
                        Height="25"
                        Margin="0,0,5,0"/>
                <TextBlock Text="C" 
                          Grid.Row="1" 
                          Grid.Column="2" 
                          VerticalAlignment="Center"/>
            </Grid>
        </StackPanel>
    </Border>
</UserControl>