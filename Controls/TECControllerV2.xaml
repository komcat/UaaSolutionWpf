<UserControl x:Class="UaaSolutionWpf.Controls.TECControllerV2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UaaSolutionWpf"
             mc:Ignorable="d" 
             d:DesignHeight="400" d:DesignWidth="350" FontSize="14">
    <Border BorderBrush="Gray" BorderThickness="1" Margin="5" Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header with title and connection status -->
            <DockPanel Grid.Row="0" LastChildFill="False" Margin="0,0,0,10">
                <TextBlock Text="TEC Controller CLD101x" 
                         FontSize="16" 
                         FontWeight="SemiBold"
                         VerticalAlignment="Center"/>
                <Rectangle Width="15" 
                         Height="15" 
                         Margin="10,0,0,0" 
                         DockPanel.Dock="Right">
                    <Rectangle.Style>
                        <Style TargetType="Rectangle">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsConnected}" Value="True">
                                    <Setter Property="Fill" Value="LimeGreen"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IsConnected}" Value="False">
                                    <Setter Property="Fill" Value="Red"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Rectangle.Style>
                </Rectangle>
            </DockPanel>

            <!-- Connection Controls -->
            <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,10">
                <Button x:Name="ConnectButton" 
                        Content="Connect" 
                        Width="80" 
                        Height="25" 
                        Margin="0,0,10,0"
                        Click="ConnectButton_Click"/>
            </StackPanel>

            <!-- Predefined Current Settings -->
            <StackPanel Grid.Row="2" Margin="0,0,0,10">
                <Button Content="Low SLED Current (150mA)" 
                        Height="30"
                        Margin="0,0,0,5"
                        Click="LowCurrent_Click"
                        IsEnabled="{Binding IsConnected}"/>
                <Button Content="High SLED Current (250mA)" 
                        Height="30"
                        Margin="0,0,0,5"
                        Click="HighCurrent_Click"
                        IsEnabled="{Binding IsConnected}"/>
            </StackPanel>

            <!-- Current and Temperature Settings -->
            <GroupBox Grid.Row="3" Header="Settings and Readings" Margin="0,0,0,10" Padding="5">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Current Settings -->
                    <TextBlock Text="Set Current" 
                              Grid.Row="0" 
                              Grid.Column="0" 
                              VerticalAlignment="Center"
                              Margin="0,0,5,5"/>
                    <TextBox Grid.Row="0" 
                            Grid.Column="1"
                            Height="25"
                            Margin="0,0,5,5"
                            Text="{Binding CurrentSetpoint, StringFormat=F3, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="A" 
                              Grid.Row="0" 
                              Grid.Column="2" 
                              VerticalAlignment="Center"
                              Margin="0,0,5,5"/>
                    <Button Grid.Row="0"
                            Grid.Column="3"
                            Content="Set"
                            Width="50"
                            Height="25"
                            Click="SetCurrent_Click"
                            IsEnabled="{Binding IsConnected}"/>

                    <!-- Temperature Settings -->
                    <TextBlock Text="Set Temp" 
                              Grid.Row="1" 
                              Grid.Column="0" 
                              VerticalAlignment="Center"
                              Margin="0,0,5,5"/>
                    <TextBox Grid.Row="1" 
                            Grid.Column="1"
                            Height="25"
                            Margin="0,0,5,5"
                            Text="{Binding TemperatureSetpoint, StringFormat=F2, UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="°C" 
                              Grid.Row="1" 
                              Grid.Column="2" 
                              VerticalAlignment="Center"
                              Margin="0,0,5,5"/>
                    <Button Grid.Row="1"
                            Grid.Column="3"
                            Content="Set"
                            Width="50"
                            Height="25"
                            Click="SetTemperature_Click"
                            IsEnabled="{Binding IsConnected}"/>

                    <!-- Current Reading -->
                    <TextBlock Text="Current" 
                              Grid.Row="2" 
                              Grid.Column="0" 
                              VerticalAlignment="Center"
                              Margin="0,5,5,5"/>
                    <TextBlock Grid.Row="2" 
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Margin="0,5,5,5"
                             Text="{Binding CurrentReading, StringFormat={}{0:F3} A}"/>

                    <!-- Temperature Reading -->
                    <TextBlock Text="Temp" 
                              Grid.Row="3" 
                              Grid.Column="0" 
                              VerticalAlignment="Center"
                              Margin="0,5,5,0"/>
                    <TextBlock Grid.Row="3" 
                             Grid.Column="1"
                             Grid.ColumnSpan="2"
                             Margin="0,5,5,0"
                             Text="{Binding TemperatureReading, StringFormat={}{0:F2} °C}"/>
                </Grid>
            </GroupBox>

            <!-- Control Buttons -->
            <UniformGrid Grid.Row="4" Columns="2">
                <Button Content="Laser OFF" 
                        Height="30"
                        Margin="0,0,5,0"
                        Click="LaserOff_Click"
                        IsEnabled="{Binding IsConnected}"/>
                <Button Content="TEC OFF" 
                        Height="30"
                        Margin="5,0,0,0"
                        Click="TecOff_Click"
                        IsEnabled="{Binding IsConnected}"/>
            </UniformGrid>
        </Grid>
    </Border>
</UserControl>