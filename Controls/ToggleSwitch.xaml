<UserControl x:Class="UaaSolutionWpf.Controls.ToggleSwitch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="200">

    <Grid Margin="5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Label -->
        <TextBlock x:Name="Label" 
                  Grid.Column="0"
                  Text="Left Gripper"
                  VerticalAlignment="Center"
                  Margin="0,0,10,0"
                  FontSize="14"/>

        <!-- State Text -->
        <TextBlock x:Name="StateText"
                  Grid.Column="1"
                  Text="Off"
                  VerticalAlignment="Center"
                  Margin="0,0,10,0"
                  Foreground="#666666"
                  FontSize="14"/>

        <!-- Toggle Switch -->
        <ToggleButton x:Name="Switch"
                    Grid.Column="2"
                    Width="50"
                    Height="24"
                    Click="Switch_Click">
            <ToggleButton.Style>
                <Style TargetType="ToggleButton">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="ToggleButton">
                                <Border x:Name="border" 
                                        Background="#e5e7eb"
                                        CornerRadius="12"
                                        BorderThickness="0"
                                        Cursor="Hand">
                                    <Grid>
                                        <Ellipse x:Name="switch"
                                                 Width="20" 
                                                 Height="20"
                                                 Fill="White"
                                                 HorizontalAlignment="Left"
                                                 Margin="2,0,0,0">
                                            <Ellipse.Effect>
                                                <DropShadowEffect BlurRadius="4" 
                                                                ShadowDepth="1" 
                                                                Opacity="0.25"/>
                                            </Ellipse.Effect>
                                        </Ellipse>
                                    </Grid>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsChecked" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#10b981"/>
                                        <Setter TargetName="switch" Property="HorizontalAlignment" Value="Right"/>
                                        <Setter TargetName="switch" Property="Margin" Value="0,0,2,0"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                </Style>
            </ToggleButton.Style>
        </ToggleButton>
    </Grid>
</UserControl>