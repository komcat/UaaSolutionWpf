<Window x:Class="UaaSolutionWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UaaSolutionWpf"
        xmlns:controls="clr-namespace:UaaSolutionWpf.Controls"
        mc:Ignorable="d"
        Title="MainWindow" Height="1024" Width="2200" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel x:Name="TopRowPanel" Grid.Column="0" Grid.ColumnSpan="3" Grid.Row="0">
            <TextBlock FontSize="20">UAA Solution</TextBlock>
        </StackPanel>

        <StackPanel x:Name="LeftStackPanel"
            Grid.Column="0" 
            Grid.Row="1" 
            Grid.RowSpan="3" 
            Width="300" 
            Background="LightGray">
            <controls:TECController Margin="2"/>
            <controls:VacBaseControl Margin="2"/>
        </StackPanel>
        <StackPanel x:Name="SensorPanel" Grid.Column="1" Grid.Row="1">
            <controls:AlignSensorControl  Margin="5"/>

        </StackPanel>


        <StackPanel x:Name="MiddlePanel" Grid.Column="2" Grid.Row="1" Grid.RowSpan="2" Width="200">

        </StackPanel>

        <StackPanel x:Name="BottomRowPanel" Grid.Column="0" Grid.ColumnSpan="2" Grid.Row="4" >
            <controls:SimpleJogControl  Margin="5"/>
        </StackPanel>


        <!--Main tab controls-->
        <StackPanel x:Name="TabControllerPanel" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Grid.RowSpan="3">
            <!-- Add controls for tab management here -->
            <TabControl  FontSize="18">
                <TabItem Header="Run">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <controls:AutoAlignmentControl Grid.Row="0" Grid.Column="2" Grid.ColumnSpan="2"/>
                        <ScrollViewer Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" >
                            <StackPanel Width="400">

                            </StackPanel>
                        </ScrollViewer>
                    </Grid>
                </TabItem>
                <TabItem Header="Manual">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <!--gantry move-->
                        <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Width="250">
                            <ScrollViewer MaxHeight="550" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="GantryManualMoveControl"  Orientation="Vertical" Margin="5">
                                    <TextBlock>Gantry</TextBlock>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Grid.Row="0" Grid.RowSpan="2" Width="250">
                            <ScrollViewer MaxHeight="800" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="LeftHexapodManualMoveControl"  Orientation="Vertical" Margin="5">
                                    <TextBlock>Left Hexapod</TextBlock>

                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                        <StackPanel Grid.Column="2" Grid.Row="0" Grid.RowSpan="2" Width="250">
                            <ScrollViewer MaxHeight="800" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="RightHexapodManualMoveControl"  Orientation="Vertical" Margin="5">
                                    <TextBlock>Right Hexapod</TextBlock>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                        <StackPanel Grid.Column="3" Grid.Row="0" Grid.RowSpan="1" Width="250">
                            <ScrollViewer MaxHeight="800" VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="BottomHexapodManualMoveControl"  Orientation="Vertical" Margin="5">
                                    <TextBlock>Bottom Hexapod</TextBlock>
                                </StackPanel>
                            </ScrollViewer>
                        </StackPanel>
                    </Grid>
                </TabItem>
                <TabItem Header="Robots" >
                    <Grid>
                        <!-- Content for Tab 3 -->
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <StackPanel x:Name="LeftHexapodPanel" Grid.Row="0" Grid.RowSpan="2" Grid.Column="0">
                            <controls:HexapodControl x:Name="LeftHexapodControl" Margin="2"/>
                        </StackPanel>
                        <StackPanel x:Name="BottomHexapodPanel" Grid.Row="0" Grid.RowSpan="2" Grid.Column="1">
                            <controls:HexapodControl x:Name="BottomHexapodControl" Margin="2"/>
                        </StackPanel>
                        <StackPanel x:Name="RightHexapodPanel" Grid.Row="0" Grid.RowSpan="2" Grid.Column="2">
                            <controls:HexapodControl x:Name="RightHexapodControl" Margin="2"/>
                        </StackPanel>
                        <controls:GantryControl x:Name="GantryControl" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="23" />
                    </Grid>
                </TabItem>
                <TabItem Header="I/O">
                    <Grid>
                        <!-- Content for Tab 2 -->
                    </Grid>
                </TabItem>
            </TabControl>


        </StackPanel>

        <StackPanel x:Name="DisplayPanel" Grid.Column="1" Grid.Row="2" Grid.RowSpan="2">
            <Canvas Width="800" Height="600" Margin="5" Background="LightBlue">
                <!-- Canvas content will go here -->
            </Canvas>
        </StackPanel>
        
        <CheckBox x:Name="noMotorModeCheckBox" Grid.Column="3" Content="No motors mode" HorizontalAlignment="Right" Margin="3" VerticalAlignment="Top" IsChecked="False"/>


    </Grid>
</Window>